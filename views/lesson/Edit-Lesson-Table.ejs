<%- include('../fragments/header.ejs') %>
    <main>
        <h2 style="text-align: center;">Edit Lesson</h2>
        <form class="form">
            <label for="TeacherName">Teacher Name:</label>
            <input type="text" name="TeacherName" value="Jan" id="TeacherName" />
            <label for="Date">Date:</label>
            <input type="date" name="Date" value="2020-11-15" id="Date" />
            <label for="StartTime">Start Time:</label>
            <input type="text" name="StartTime" value="10:15" id="StartTime" />
            <label for="EndTime">End Time:</label>
            <input type="text" name="EndTime" value="11:45" id="EndTime" />
            <label for="Topic">Topic:</label>
            <input type="text" name="Topic" value="USA Elections" id="Topic" />
            <label for="ClassroomNr">Classroom Nr:</label>
            <input type="text" name="ClassroomNr" value="2B" id="ClassroomNr" />

            <div class="form-buttons">
                <input type="submit" class="form-button-submit" value="Edit" />
                <a href="./index.html" class="form-button-cancel">Back</a>
            </div>
        </form>

    </main>
    <%- include('../fragments/footer.ejs') %>