<%- include('../fragments/header.ejs') %>
    <main>
        <h2 style="text-align: center;">Add New Teacher</h2>
        <form class="form" novalidate onsubmit="return validateForm();">
            <label for="firstName">Name:<sup>*</sup></label>
            <input type="text" name="firstName" id="firstName" placeholder="2-60 znaków" />
            <span id="errorFirstName" class="errors-text"></span>

            <label for="lastName">Surname:<sup>*</sup></label>
            <input type="text" name="lastName" id="lastName" placeholder="2-60 znaków" />
            <span id="errorLastName" class="errors-text"></span>

            <label for="Salary">Salary:<sup>*</sup></label>
            <input type="text" name="Salary" id="Salary" placeholder="np. 3000" />
            <span id="errorSalary" class="errors-text"></span>

            <label for="HireDate">HireDate:<sup>*</sup></label>
            <input type="text" name="HireDate" id="HireDate" placeholder="np 2020-10-10" />
            <span id="errorDate" class="errors-text"></span>

            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <input type="submit" class="form-button-submit" value="Add" />
                <a href="./index.html" class="form-button-cancel">Back</a>
            </div>
        </form>

    </main>
    <%- include('../fragments/footer.ejs') %>